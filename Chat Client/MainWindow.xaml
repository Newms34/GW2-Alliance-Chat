<Window x:Class="Chat_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="512" MaxWidth="512" MaxHeight="512" MinWidth="245" MinHeight="180">
    <Window.Background>
        <ImageBrush ImageSource="Assets/155139.png"  Stretch="None"/>
    </Window.Background>
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <ScrollViewer x:Name="ScrollViewer" ScrollChanged="ScrollViewer_OnScrollChanged" Margin="0,0,0,23" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
            <RichTextBox x:Name="ChatBox" FontFamily="Assets/#menomonia" FontSize="14 px" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFA8C138" >
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0" />
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>


        </ScrollViewer>
        <Border BorderBrush="Black" BorderThickness="2" Height="22" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <TextBox x:Name="message" Text="[Party]" FontFamily="Assets/#menomonia" TextWrapping="NoWrap" Height="18" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Background="#33000000" BorderThickness="0" Foreground="#FFA8C138" FontSize="14" FontWeight="Normal" FontStyle="Normal" KeyDown="TextBox_KeyDown"/>
        </Border>



    </Grid>

</Window>


    